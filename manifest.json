{
    "manifest_version": 2,
    "name": "SpeakIt",
    "version": "1.0.0",
    "description": "To speak out the selected text",
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "browser_action": {
        "default_icon": "icon16.png",
        "default_popup": "popup.html"
    },
    "background": {
        "scripts": ["eventpage.js"],
        "persistent": false
    },
    "permissions": ["tts",    
         "contextMenus", "storage"]
}